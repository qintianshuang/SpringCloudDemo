<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.cloud.server.mapper.ExpressDaoMapper">
    <resultMap  id="resultMap" type="com.example.cloud.common.io.Employee">
        <result property="employeeId" column="employee_id" jdbcType="VARCHAR"/>
        <result property="firstName" column="first_name" jdbcType="VARCHAR"/>
        <result property="lastName" column="last_name" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="phoneNumber" column="phone_number" jdbcType="VARCHAR"/>
        <result property="jobId" column="job_id" jdbcType="VARCHAR"/>
        <result property="salary" column="salary" jdbcType="DECIMAL"/>
        <result property="commissionPct" column="commission_pct" jdbcType="DECIMAL"/>
        <result property="managerId" column="manager_id" jdbcType="VARCHAR"/>
        <result property="departmentId" column="department_id" jdbcType="VARCHAR"/>
    </resultMap>


    <select id="queryExpress" resultType="com.example.cloud.common.io.ExpressBean">
		SELECT * FROM emp_info
	</select>

    <select id="queryEmployee"  resultMap="resultMap">
		SELECT * FROM employees
	</select>

    <insert id="insertExpress" parameterType="java.util.List">
            insert into emp_info (emp_no, emp_name, age,emp_job,company)
            values
            <foreach collection="expressBeanList" item="item" index="index" separator=",">
                (#{item.empNo,jdbcType=VARCHAR}, #{item.empName,jdbcType=VARCHAR},
                #{item.age,jdbcType=INTEGER},#{item.empJob,jdbcType=VARCHAR},#{item.company,jdbcType=VARCHAR})
            </foreach>
    </insert>
</mapper>
